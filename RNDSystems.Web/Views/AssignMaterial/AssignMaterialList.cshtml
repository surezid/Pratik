@model RNDMaterial
@{
    ViewBag.Title = "AssignMaterialList";
}

<div class="panel-heading">Assign Material List</div>
<div class="panel-body">
    <div id="searchDiv" class="container">
        <div class="row">
            <div class="col-md-3">
                <button id="btnAdd" class="btn btn-success btn-large"><i class="fa fa-plus" aria-hidden="true"></i>Assign New Material</button>
            </div>
            <div class="col-md-3 pull-right">
                <button id="btnBack" onclick="window.history.back();" class="btn btn-primary btn-large"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</button>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="searchWorkStudyNumber" class="cols-sm-2 control-label">Work Study Number</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-book" aria-hidden="true"></i></span>
                            <input type="text" value="@Model.WorkStudyID" id="searchWorkStudyNumber" name="searchWorkStudyNumber" class="form-control" placeholder="Enter Work Study Number" />
                            <input type="hidden" name="WorkStudyID" id="WorkStudyID" value="@Model.WorkStudyID" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="searchMillLotNo" class="cols-sm-2 control-label">Mill Lot Number</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
                            <input type="text" value="" id="searchMillLotNo" name="searchMillLotNo" class="form-control" placeholder="Enter Mill Lot Number" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="searchUACPartNo" class="cols-sm-2 control-label">UAC Part Number</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
                            <input type="text" value="" id="searchUACPartNo" name="searchUACPartNo" class="form-control" placeholder="Enter UAC Part Number" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
