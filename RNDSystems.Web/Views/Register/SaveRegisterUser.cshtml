@model RNDSystems.Models.RNDLogin
@{
    ViewBag.Title = "SaveRegisterUser";
}

@*<h2> &nbsp; Register User</h2>*@
<div class="panel-heading">Register User</div>
<div class="container">
    <div class="row">
        <div class="col-md-3 pull-right">
            <button id="btnBack" onclick="window.history.back();" class="btn btn-primary btn-large"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</button>
        </div>
    </div>
    
    @using (Html.BeginForm("SaveRegisterUser", "Register", FormMethod.Post, new { id = "SaveRegisterUser" }))
    {
        <div class="row">
            @*<div class="col-md-3">
                    <div class="form-group">
                        <label for="UserId" class="cols-sm-2 control-label">User Id</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-text-width" aria-hidden="true"></i></span>
                                <input type="text" value="@Model.UserId" id="UserId" name="UserId" class="form-control" placeholder="" />
                                <input type="hidden" name="CreatedBy" id="CreatedBy" value="@Model.CreatedBy" />
                            </div>
                        </div>
                    </div>
                </div>*@
           
            <div class="col-md-3">
                <div class="form-group">
                    <label for="FirstName" class="cols-sm-2 control-label">First Name</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-text-width" aria-hidden="true"></i></span>
                            <input type="text" value="@Model.FirstName" id="FirstName" name="FirstName" class="form-control" placeholder="Enter First Name" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="LastName" class="cols-sm-2 control-label">Last Name</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-text-width" aria-hidden="true"></i></span>
                            <input type="text" value="@Model.LastName" id="LastName" name="LastName" class="form-control" placeholder="Enter Last Name" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="UserName" class="cols-sm-2 control-label">User Name</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-text-width" aria-hidden="true"></i></span>
                            <input type="text" value="@Model.UserName" id="UserName" name="UserName" class="form-control" placeholder="Enter User Name" />
                            <input type="hidden" id="UserId" name="UserId" value="@Model.UserId" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="searchUserType" class="cols-sm-2 control-label">User Type</label>
                    <div class="cols-sm-10">
                        @Html.DropDownList("PermissionLevel", ViewBag.ddlPermissionLevel as IEnumerable<SelectListItem>, new { @class = "show-tick" })
                    </div>
                </div>
            </div>
            </div>
            <div class="row">
                <div class="col-md-3" name="divpwd">
                    <div class="form-group">
                        <label for="Password" class="cols-sm-2 control-label">Password</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-text-width" aria-hidden="true"></i></span>
                                <input type="password" value="@Model.Password" id="Password" name="Password" class="form-control" placeholder="Enter Password" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3" name="divpwd">
                    <div class="form-group">
                        <label for="ConfirmPassword" class="cols-sm-2 control-label">Confirm Password</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-text-width" aria-hidden="true"></i></span>
                                <input type="password" value="@Model.ConfirmPassword" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <button id="btnBack" onclick="window.history.back();" class="btn btn-danger btn-large"><i class="fa fa-times" aria-hidden="true"></i> Cancel</button>
                    <button type="submit" class="btn btn-success"><i class="fa fa-check" aria-hidden="true"></i>Save</button>
                </div>
            </div>
        </div>
    }
    @*<div class="row">
        <div class="col-md-3"></div>
    </div>*@
   
</div>

@section scripts{
    @Scripts.Render("~/bundles/SaveRegisteredUser")
}